<nav>
  <h1 class="text-center">Surveyor:</h1>
  <h1 class="text-center">Tell Me #allthethings!</h1>
  </br>
  <p>Click on a survey below to take it or create one of your own!</p>

  <p><%= button_to "Create a new Survey", new_survey_path, :class => "btn btn-primary btn-group btn-group", :method => :get %></p>
  </br>

  <h4>Take a Survey</h4>
  <% @surveys.each do | survey | %>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td><%= survey.title %></td>
          <td></td>
        </tr>
        <tr>
          <td><em><%= survey.description %></em></td>
          <td></td>
        </tr>
        <tr>
          <td><em>RESPONSES</em></td>
          <td></td>
        </tr>
        <tr>
          <td><%= button_to "Take Survey", new_survey_user_response_path(survey), :class => "btn btn-primary btn-group btn-group", :method => :get %></td>
          <td><%= button_to "View Results", survey_user_responses_path(survey), :class => "btn btn-primary btn-group btn-group", :method => :get %></td>
        </tr>
      </tbody>
    </br>
    </table>
  <% end %>

</nav>